<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingFragment3">

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/txtTitle3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_title_3"
        android:textAppearance="@style/Title.GreenBold"
        android:textSize="28sp"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- DESCRIPCIÓN -->
    <TextView
        android:id="@+id/txtDescription3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_desc_3"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/imgOnboarding3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/onboarding_image_3"
        android:contentDescription="@string/onboarding_image"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtDescription3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnLogin"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.55" />

    <!-- BOTÓN -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_login"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
