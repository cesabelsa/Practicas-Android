<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_bg"
    tools:context=".HomeActivity">

    <!-- ===== CONTENIDO ORIGINAL (LinearLayout + Toolbar + Scroll) ===== -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface_bg">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/app_name"
            app:titleTextColor="?attr/colorOnPrimary"
            app:titleCentered="false"
            app:menu="@menu/menu_home"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:contentInsetLeft="0dp"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
            app:subtitleTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:fitsSystemWindows="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/surface_bg"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="ExtraText">

                <!-- Título principal -->
                <TextView
                    android:id="@+id/tvMainTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming meetups"
                    style="@style/Title.GreenBold"
                    android:layout_marginBottom="6dp" />

                <!-- Botones: más grandes y casi sin separación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Camera -->
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitXY"
                        android:src="@drawable/camara" />

                    <!-- Favorite -->
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitXY"
                        android:src="@drawable/favoritos" />

                    <!-- Terrain -->
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitXY"
                        android:src="@drawable/montana" />

                    <!-- Face -->
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitXY"
                        android:src="@drawable/cara" />
                </LinearLayout>

                <!-- Card 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardUseCompatPadding="true"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/brand_primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:src="@drawable/image_container1"
                            android:contentDescription="@string/img_desc"
                            app:shapeAppearanceOverlay="@style/RoundedImageView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USA, Los Angeles - 2 Weeks"
                            android:textSize="14sp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvSubtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Title.GreenBold"
                            android:text="City of Los Angeles"
                            android:textSize="18sp"
                            android:layout_marginStart="12dp"
                            android:layout_marginBottom="10dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardUseCompatPadding="true"
                    app:shapeAppearanceOverlay="@style/RoundedImageView"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/brand_primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:src="@drawable/image_container2"
                            android:contentDescription="@string/img_desc"
                            app:shapeAppearanceOverlay="@style/RoundedImageView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maldives - 3 weeks"
                            android:textSize="14sp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvSubtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Title.GreenBold"
                            android:text="Beach vacation"
                            android:textSize="18sp"
                            android:layout_marginStart="12dp"
                            android:layout_marginBottom="10dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- ===== CONTENEDOR OVERLAY PARA FRAGMENTS ===== -->
    <FrameLayout
        android:id="@+id/overlay_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />
    <!-- ===== FIN OVERLAY ===== -->

</FrameLayout>
