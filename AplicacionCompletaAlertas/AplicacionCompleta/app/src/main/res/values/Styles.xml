<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Título en verde oscuro y negrita -->
    <style name="Title.GreenBold" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/verde_oscuro</item>
    </style>

    <!-- Contenedor input con borde verde -->
    <style name="TextInputLayout.OutlinedGreen" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/brand_input_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="startIconTint">@color/verde_oscuro</item>
        <item name="endIconTint">@color/verde_oscuro</item>
    </style>

    <!-- Texto interior verde claro -->
    <style name="TextInputEditText.Green" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/verde_claro</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <!-- Botón corporativo -->
    <style name="Button.GreenRounded" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/brand_button_background</item>
        <item name="android:textColor">@color/brand_button_text</item>
        <item name="rippleColor">@color/brand_button_ripple</item>
        <item name="strokeColor">@color/brand_button_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Imagen redondeada para ShapeableImageView -->
    <style name="RoundedImageView">
        <item name="shapeAppearanceOverlay">@style/RoundedImageShape</item>
    </style>
    <style name="RoundedImageShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Exposed Dropdown con tu borde -->
    <style name="TextInputLayout.OutlinedGreen.Dropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/brand_input_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="startIconTint">@color/verde_oscuro</item>
        <item name="endIconTint">@color/verde_oscuro</item>
    </style>

    <style name="AutoCompleteTextView.Green" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:textColor">@color/verde_claro</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <!-- Alternativa si algunos layouts piden Widget.Button.Primary -->
    <style name="Widget.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/brand_button_background</item>
        <item name="android:textColor">@color/brand_button_text</item>
        <item name="rippleColor">@color/brand_button_ripple</item>
        <item name="strokeColor">@color/brand_button_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Textos utilitarios -->
    <style name="TextBold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Shapes que referencia el tema -->
    <style name="ShapeAppearance.App.Small" parent="ShapeAppearance.Material3.Corner.Small"/>
    <style name="ShapeAppearance.App.Medium" parent="ShapeAppearance.Material3.Corner.Medium"/>
    <style name="ShapeAppearance.App.Large" parent="ShapeAppearance.Material3.Corner.Large"/>
    <style name="Text.Link.Green" parent="TextAppearance.Material3.BodyMedium">

        <item name="android:textColor">@color/verde_oscuro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>
</resources>
