<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingFragment1">

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/txtTitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_title"
        android:textAppearance="@style/Title.GreenBold"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginTop="48dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TEXTO DESCRIPTIVO -->
    <TextView
        android:id="@+id/txtDescription1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_description"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- IMAGEN  -->
    <ImageView
        android:id="@+id/imgOnboarding1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/onboarding_image_1"
        android:contentDescription="@string/onboarding_image"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtDescription1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.45" />

    <!-- BOTÓN ABAJO DEL TODO -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_next"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/imgOnboarding1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

