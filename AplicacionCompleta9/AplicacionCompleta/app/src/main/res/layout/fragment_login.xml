<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="es.layout.aplicacioncompleta.model.Usuario" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/surface_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/space_4"
            android:paddingEnd="@dimen/space_4"
            android:paddingBottom="@dimen/space_5">

            <!-- Imagen superior -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgHeader"
                android:layout_width="330dp"
                android:layout_height="273dp"
                android:layout_marginTop="56dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/img_desc"
                android:scaleType="centerCrop"
                style="@style/RoundedImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/nomads_city_tour" />

            <!-- Título -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:text="@string/login_title"
                style="@style/Title.GreenBold"
                app:layout_constraintTop_toBottomOf="@id/imgHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Usuario -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilUser"
                style="@style/TextInputLayout.OutlinedGreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3"
                android:hint="@string/hint_user"
                app:startIconDrawable="@drawable/baseline_person_24"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/baseline_visibility_24"
                app:endIconContentDescription="@string/mostrar_ocultar_usuario"
                app:layout_constraintTop_toBottomOf="@id/txtTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtUser"
                    style="@style/TextInputEditText.Green"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:inputType="textPersonName"
                    android:paddingStart="40dp"
                    android:text='@={user.login}' />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPass"
                style="@style/TextInputLayout.OutlinedGreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3"
                android:hint="@string/hint_password"
                app:startIconDrawable="@drawable/baseline_lock_24"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/baseline_visibility_24"
                app:endIconContentDescription="@string/mostrar_ocultar_usuario"
                app:layout_constraintTop_toBottomOf="@id/tilUser"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPass"
                    style="@style/TextInputEditText.Green"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:inputType="textPassword"
                    android:paddingStart="40dp"
                    android:paddingEnd="@dimen/space_2"
                    android:text='@={user.password}' />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón Login -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                style="@style/Button.GreenRounded"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:text="@string/login_button"
                app:icon="@drawable/baseline_arrow_forward_24"
                app:iconGravity="textEnd"
                app:iconPadding="8dp"
                app:layout_constraintTop_toBottomOf="@id/tilPass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Línea 1: Olvidaste contraseña / Obtener nueva -->
            <TextView
                android:id="@+id/txtForgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3"
                android:text="@string/login_forgot_password"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/btnLogin"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtGetNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_button"
                style="@style/Text.Link.Green"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginStart="@dimen/space_2"
                app:layout_constraintTop_toTopOf="@id/txtForgot"
                app:layout_constraintStart_toEndOf="@id/txtForgot" />

            <!-- Línea 2: No tienes cuenta / Crear nueva -->
            <TextView
                android:id="@+id/txtNoAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2"
                android:text="@string/auth_no_account_question"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/txtForgot"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtCreateNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auth_create_new"
                style="@style/Text.Link.Green"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginStart="@dimen/space_2"
                app:layout_constraintTop_toTopOf="@id/txtNoAccount"
                app:layout_constraintStart_toEndOf="@id/txtNoAccount" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>


