<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming meetups"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Botones de categorías -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:weightSum="4"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#D4E3FF"
                android:text=""
                app:icon="@drawable/baseline_camera"
                app:iconGravity="textStart"
                app:iconSize="32dp"
                app:iconPadding="0dp"
                app:cornerRadius="16dp"
                app:iconTint="@android:color/black"
                android:contentDescription="Camera" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#EEDFFF"
                android:text=""
                app:icon="@drawable/outline_heart"
                app:iconGravity="textStart"
                app:iconSize="32dp"
                app:iconPadding="0dp"
                app:cornerRadius="16dp"
                app:iconTint="@android:color/black"
                android:contentDescription="Heart" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FFE4F1"
                android:text=""
                app:icon="@drawable/baseline_terrain"
                app:iconGravity="textStart"
                app:iconSize="32dp"
                app:iconPadding="0dp"
                app:cornerRadius="16dp"
                app:iconTint="@android:color/black"
                android:contentDescription="Tent" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#FFF1B8"
                android:text=""
                app:icon="@drawable/baseline_face"
                app:iconGravity="textStart"
                app:iconSize="32dp"
                app:iconPadding="0dp"
                app:cornerRadius="16dp"
                app:iconTint="@android:color/black"
                android:contentDescription="Smiley" />
        </LinearLayout>


        <!-- Primera Card --><!-- Primera Card -->
    <!-- Primera Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        app:cardCornerRadius="16dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/image_container1"
                android:contentDescription="Los Angeles image"
                app:shapeAppearanceOverlay="@style/RoundedImageViewStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USA, Los Angeles - 2 Weeks"
                android:textSize="14sp"
                android:layout_margin="12dp"
                android:textColor="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City of Los Angeles"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="#000000" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Segunda Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/image_container2"
                android:contentDescription="Maldives image"
                app:shapeAppearanceOverlay="@style/RoundedImageViewStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maldives - 3 weeks"
                android:textSize="14sp"
                android:layout_margin="12dp"
                android:textColor="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beach vacation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="#000000" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
</ScrollView>

