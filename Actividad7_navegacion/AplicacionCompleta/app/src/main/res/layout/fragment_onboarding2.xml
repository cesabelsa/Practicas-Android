<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingFragment2">

    <!-- TÍTULO (CORREGIDO: AHORA SÍ TIENE TEXTO) -->
    <TextView
        android:id="@+id/onboarding_title_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_title_1"
        android:textAppearance="@style/Title.GreenBold"
        android:textSize="28sp"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TEXTO DESCRIPTIVO -->
    <TextView
        android:id="@+id/txtDescription2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_desc_1"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_title_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- IMAGEN (AUMENTADA DE 0.45 → 0.55) -->
    <ImageView
        android:id="@+id/imgOnboarding2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/onboarding_image_2"
        android:contentDescription="@string/onboarding_image"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtDescription2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSkip"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.55" />

    <!-- BOTÓN SKIP (NO TOCADO) -->
    <Button
        android:id="@+id/btnSkip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_skip"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnNext" />

    <!-- BOTÓN  -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_next"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSkip"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
